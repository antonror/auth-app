<h1>All Users</h1>

<table id="users">
  <thead>
  <tr>
    <th>Email</th>
    <th>Admin</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th><%= user.email %></th>
      <th><%= user.admin %></th>
      <th><%= user.created_at.to_s(:datetime).downcase %></th>
      <th><%= user.updated_at.to_s(:datetime).downcase %></th>
      <th><%= link_to "Edit", edit_admin_user_path(user) %></th>
      <th><%= link_to "Delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure?" %></th>
    </tr>
  <% end %>
  </tbody>


</table>

<p><%= link_to "New User", new_admin_user_path %></p>